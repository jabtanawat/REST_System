<!-- Modal Menu Table -->
<div class="modal fade" id="popupManuTable" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="popupMenuTableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <p class="font-weight-bold">รายละเอียด - @ViewBag.TableName</p>
                    </div>
                    <div class="col text-right">
                        <button type="button" class="btn btn-sm btn-danger py-0" data-dismiss="modal"><i class="fas fa-times"></i></button>
                    </div>
                </div>   
                <div class="d-flex ">
                    <div class="flex-fill" style="max-width: 33.33%;">
                        <a href="@Url.Action("FrmDataTable", "StoreFront", new { id = ViewBag.TableId})" class="text-decoration-none">
                            <div class="card text-white bg-blue border-0 rounded-0 mr-1">
                                <div class="card-body text-center">
                                    <h3 class="card-title mb-1"><i class="far fa-file-alt"></i></h3>
                                    <p class="card-text">TABLE</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="flex-fill" style="max-width: 33.33%;">
                        <a href="@Url.Action("Order", "SF_Order", new { id = ViewBag.TableId})" class="text-decoration-none">
                            <div class="card text-white bg-blue border-0 rounded-0 mr-1">
                                <div class="card-body text-center">
                                    <h3 class="card-title mb-1"><i class="fas fa-cart-plus"></i></h3>
                                    <p class="card-text">สั่งอาหาร</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    @{
                        if (ViewBag.TableST == 2)
                        {
                            <div class="flex-fill" style="max-width: 33.33%;">
                                <a href="@Url.Action("FrmBill", "SF_Payment", new { id = ViewBag.TableId})" class="text-decoration-none">
                                    <div class="card bg-yellow border-0 rounded-0">
                                        <div class="card-body text-center">
                                            <h3 class="card-title mb-1"><i class="fas fa-tags"></i></h3>
                                            <p class="card-text">เช็คบิล</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="flex-fill" style="max-width: 33.33%;">
                                <a href="#" class="text-decoration-none">
                                    <div class="card bg-status-1 border-0 rounded-0">
                                        <div class="card-body text-center">
                                            <h3 class="card-title mb-1"><i class="fas fa-tags"></i></h3>
                                            <p class="card-text">เช็คบิล</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

