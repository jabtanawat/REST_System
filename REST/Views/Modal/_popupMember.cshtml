<!-- Modal Staple -->
<div class="modal fade bd-example-modal-lg" id="popupMember" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="popupMemberTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <h6 class="font-weight-bold" id="exampleModalCenterTitle"><i class="fas fa-database mr-2"></i>ข้อมูลสมาชิก</h6>
                    </div>
                    <div class="col text-right">
                        <button type="button" class="btn btn-table-sm btn-danger text-white px-2" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
                <hr />
                <table id="ViewDT" class="table table-md table-bordered table-hover mt-3">
                    <thead style="background-color:#F8FAFD;">
                        <tr>
                            <th class="text-center"> รหัส </th>
                            <th class="text-center"> ชื่อ </th>
                            <th class="text-center" style="width:5%;"> # </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var row in ViewBag.View)
                            {
                                <tr>
                                    <td>@row.MemberId</td>
                                    <td>@row.Name</td>
                                    <td class="text-center"><button type="button" onclick="showMember('@row.MemberId')" class="btn btn-table-sm btn-info"><i class="fas fa-location-arrow"></i></button></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#ViewDT').DataTable({
            "info": false,
            "ordering": false
        });
    })
</script>