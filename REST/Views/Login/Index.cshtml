@model REST.ViewModels.ViewLogin
@{
    Layout = "_Layout";
    ViewData["Title"] = "เข้าสู่ระบบ";
}

@section Styles {
    <link rel="stylesheet" href="~/StyleSheet/Login/Style.css" />
}

<div class="container-xl">
    <div class="form-login">
        <div class="card">
            <img src="~/Images/System/REST_Logo.jpg" class="card-img-top rounded-circle" />
            <div class="card-body">
                <h3 class="text-center font-weight-bold mb-3">ระบบร้านอาหาร</h3>
                <form method="post" asp-controller="Login" asp-action="Index">
                    <div class="form-group mb-3">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="btn btn-blue"><i class="fas fa-user"></i></span>
                            </div>
                            <input asp-for="UserName" type="text" class="form-control" placeholder="Username" autofocus>
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="btn btn-blue"><i class="fas fa-lock"></i></span>
                            </div>
                            <input asp-for="PassWord" type="password" class="form-control" placeholder="Password">
                        </div>
                        <span asp-validation-for="PassWord" class="text-danger"></span>
                    </div>
                    @*<div class="text-right mb-3">
                        <small><a class="text-right" href="#">Forgot Password?</a></small>
                    </div>*@
                    <button type="submit" class="btn btn-success btn-block mb-3">Login.</button>
                </form>
            </div>
        </div>
    </div>
</div>
