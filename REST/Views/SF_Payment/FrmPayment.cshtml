@using REST.Service;
@model REST.ViewModels.ViewFrmPayment;
@{
    ViewData["Title"] = "Payment";
    ViewData["System"] = "ชำระเงิน";
    Layout = "_StoreFront";
}

@section Styles {
    <link href="~/Plugins/DataTables/DataTables-1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-xl-11 mx-auto">
                <p>ข้อมูลการชำระเงิน</p>
                <hr />
                <form name="FrmPayment" method="post">
                    <div class="row">
                        <div class="col-xl-6 col-lg-8 col-md-9">
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">เลือกโต๊ะ :</label>
                                <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                    <div class="input-group input-group-sm">
                                        <input type="hidden" asp-for="TableId" class="form-control">
                                        <input type="text" asp-for="TableName" class="form-control" aria-describedby="txtTableName">
                                        <div class="input-group-append">
                                            <button class="btn btn-primary" type="button" id="txtTableName" data-toggle="ajax-modal" data-target="#popupTable" data-url="@Url.Action("_popupTable", "Modal")"><i class="fas fa-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @{
                        if (Model.TableId != null)
                        {
                            if (Model.Total != null)
                            {
                                <div class="row">
                                    <div class="col-xl-6 col-lg-8 col-md-9">
                                        @if (Model.St == 1)
                                        {
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">สถานะ :</label>
                                                <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                    <input type="text" asp-for="Status" class="form-control form-control-sm text-success">
                                                </div>
                                            </div>
                                        }
                                        else if (Model.St == 2)
                                        {
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">สถานะ :</label>
                                                <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                    <input type="text" asp-for="Status" class="form-control form-control-sm text-danger">
                                                </div>
                                            </div>
                                        }
                                        else if (Model.St == 3)
                                        {
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">สถานะ :</label>
                                                <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                    <input type="text" asp-for="Status" class="form-control form-control-sm text-warning">
                                                </div>
                                            </div>
                                        }
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">จำนวนเงิน :</label>
                                            <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                <input type="text" asp-for="Total" id="txtTotal" class="form-control form-control-sm text-right" readonly>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">ลด% :</label>
                                            <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                <input type="number" asp-for="Persen" id="txtPersen" class="form-control form-control-sm text-right">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">สมาชิก/ทั่วไป :</label>
                                            <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                <div class="input-group input-group-sm">
                                                    <input type="hidden" asp-for="MemberId" id="txtMemberId" class="form-control">
                                                    <input type="text" asp-for="MemberName" id="txtMemberName" class="form-control" aria-describedby="txtMemberName">
                                                    <div class="input-group-append">
                                                        <button class="btn btn-primary" type="button" data-toggle="ajax-modal" data-target="#popupMember" data-url="@Url.Action("_popupMember", "Modal")"><i class="fas fa-search"></i></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <section class="PaymentMember" hidden>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">% :</label>
                                                <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                    <input type="text" asp-for="Rebate" id="txtRebate" class="form-control form-control-sm text-right" readonly>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">คะแนนสะสม :</label>
                                                <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                    <input type="text" asp-for="Score" id="txtScore" class="form-control form-control-sm text-right" readonly>
                                                </div>
                                            </div>
                                        </section>
                                    </div>
                                    <div class="col-xl-6 col-lg-8 col-md-9">
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">ราคารวม :</label>
                                            <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                <input type="text" asp-for="Balance" id="txtBalance" class="form-control form-control-sm text-right" readonly>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">วิธีชำระเงิน :</label>
                                            <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                <div class="form-check">
                                                    <input class="form-check-input mt-2" asp-for="PayType" type="radio" name="PayType" id="R1" value="1" checked>
                                                    <label class="form-check-label col-form-label-sm" for="R1">
                                                        เงินสด
                                                    </label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input mt-2" asp-for="PayType" type="radio" name="PayType" id="R2" value="2">
                                                    <label class="form-check-label col-form-label-sm" for="R2">
                                                        บัตรเครดิต
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">รับเงิน :</label>
                                            <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                <input type="text" asp-for="MoneyPut" id="txtMoneyPut" class="form-control form-control-sm text-right">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-4 col-md-3 col-sm-4 col-form-label col-form-label-sm text-sm-right">ทอนเงิน :</label>
                                            <div class="col-xl-9 col-lg-8 col-md-9 col-sm-8 pr-xl-5">
                                                <input type="text" asp-for="MoneyChange" id="txtMoneyChange" class="form-control form-control-sm text-right" readonly>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button type="button" class="btn btn-sm btn-blue" btn-payment><i class="fab fa-paypal"></i>&nbsp;&nbsp;ชำระเงิน</button>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning text-center" role="alert">
                                    ไม่พบข้อมูล ! ไม่มีการสั่งออเดอร์หรือรายการอาหารไม่ครบ
                                </div>
                            }

                        }
                        else
                        {
                            <div class="alert alert-danger text-center" role="alert">
                                ไม่พบข้อมูล ! กรุณาเลือกโต๊ะ
                            </div>
                        }
                    }
                </form>
                @{
                    if (Model.OrderSub != null)
                    {
                        <hr />
                        <p>รายการอาหาร</p>
                        <table class="table table-md table-bordered">
                            <thead class="thead-light">
                                <tr>
                                    <th class="text-center" style="width:5%;">ลำดับ</th>
                                    <th class="text-center">ชื่อ</th>
                                    <th class="text-center text-info" style="width:5%;"><i class="fas fa-info-circle"></i></th>
                                    <th class="text-center" style="width:15%;">ราคา</th>
                                    <th class="text-center" style="width:10%;">จำนวน</th>
                                    <th class="text-center" style="width:15%;">รวม</th>
                                    <th class="text-center" style="width:5%;">ครั้ง</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    decimal total = 0;
                                    var x = 0;
                                    foreach (var row in Model.OrderSub)
                                    {
                                        if (row.Status != 4)
                                        {
                                            total += row.Price * row.Amount;
                                        }
                                        var pr = row.Price * row.Amount;
                                        x++;
                                        if (row.Status == 4)
                                        {
                                            <tr class="bg-red text-danger">
                                                <td class="text-center">@x</td>
                                                <td>@row.FoodName</td>
                                                <td class="text-center">ยกเลิก</td>
                                                <td class="text-right">@row.Price.ToString("N2")</td>
                                                <td class="text-right">@row.Amount</td>
                                                <td class="text-right">@pr.ToString("N2")</td>
                                                <td class="text-center">@row.i</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            <tr>
                                                <td class="text-center">@x</td>
                                                <td>@row.FoodName</td>
                                                @if (row.Status == 1)
                                                {
                                                    <td class="text-center text-danger"><i class="far fa-times-circle"></i></td>
                                                }
                                                else if (row.Status == 2)
                                                {
                                                    <td class="text-center text-warning"><i class="fas fa-diagnoses"></i></td>
                                                }
                                                else if (row.Status == 3)
                                                {
                                                    <td class="text-center text-success"><i class="far fa-check-circle"></i></td>
                                                }
                                                <td class="text-right">@row.Price.ToString("N2")</td>
                                                <td class="text-right">@row.Amount</td>
                                                <td class="text-right">@pr.ToString("N2")</td>
                                                <td class="text-center">@row.i</td>
                                            </tr>
                                        }
                                    }
                                }
                                <tr>
                                    <td class="text-right font-weight-bold" colspan="5">รวมทั้งหมด : </td>
                                    <td class="text-right font-weight-bold">@Share.Cnumber(Share.FormatDouble(total), 2)</td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    }
                }
            </div>
        </div>
    </div>
</div>

<div id="PlaceHolderHere"></div>

@section Scripts {    
    <script src="~/Plugins/DataTables/datatables.min.js"></script>
    <script src="~/Plugins/DataTables/DataTables-1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Plugins/Numeral/numeral.js"></script>
    <script>
        //$(document).ready(function () {
        //    calculate(1)
        //});

        $('[btn-payment]').click(function () {
            Swal.fire({
                text: "ต้องการบันทึกข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmPayment.action = '@Url.Action("FrmPayment")'
                    document.FrmPayment.submit();
                }
            })
        })

        /* Modal */
        var PlaceHolderElement = $('#PlaceHolderHere')
        $('button[data-toggle="ajax-modal"]').click(function (event) {
            var url = $(this).data('url')
            var decodedUrl = decodeURIComponent(url)
            $.get(decodedUrl).done(function (data) {
                PlaceHolderElement.html(data)
                PlaceHolderElement.find('.modal').modal('show')
            })
        })

        /* Member */
        function showMember(id) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ShowMember", "SF_Payment")',
                data: { id: id },
                success: function (data) {
                    $.each(data, function (index, val) {
                        $('#txtMemberId').val(val.memberId)
                        $('#txtMemberName').val(val.name)
                        $('#txtRebate').val(val.rebate)
                        $('#txtScore').val(val.score)
                    })
                    $('#popupMember').modal('hide')
                    $('.PaymentMember').removeAttr('hidden')
                    // คำนวณ
                    calculate(1)
                }
            })
        }

        $('#txtPersen').blur(function () {
            // คำนวณ
            calculate(1)
        })

        $('#txtMoneyPut').blur(function () {
            var txt = numeral($('#txtMoneyPut').val()).format('0,0.00');
            $('#txtMoneyPut').val(txt);
            // คำนวณ
            calculate(2)
        })

        function calculate(a) {
            const total = parseFloat($('#txtTotal').val().replace(/,/g, ''))
            const persen = parseFloat($('#txtPersen').val().replace(/,/g, ''))
            const rebate = parseFloat($('#txtRebate').val().replace(/,/g, ''))
            const put = $('#txtMoneyPut')
            const balance = $('#txtBalance')
            const change = $('#txtMoneyChange')

            switch (a) {
                case 1:
                    // balance calculate
                    const b = total - (total * rebate / 100) - (total * persen / 100)
                    balance.val(numeral(b).format('0,0.00'))
                    put.val(0.00)
                    change.val(0.00)
                    break

                case 2:
                    // change calculate
                    const c = parseFloat(put.val().replace(/,/g, '')) - parseFloat(balance.val().replace(/,/g, ''))
                    change.val(numeral(c).format('0,0.00'))
                    break
            }
        }
    </script>
}
