@{
    ViewData["Title"] = "Store Back";
    ViewData["System"] = "โซนที่นั่ง";
    Layout = "_StoreBack";
}

@section Styles {
    <link rel="stylesheet" href="~/Plugins/DataTables/DataTables-1.10.21/css/dataTables.bootstrap4.min.css" />
}

<div class="card">
    <div class="card-body" scroll>
        <div class="row">
            <div class="col-xl-11 mx-auto">
                <!-- Header -->
                <section>
                    <div class="d-flex mb-2">
                        <div class="ml-2 mr-2">
                            <a href="@Url.Action("FrmZone", "CD_Zone", new { mode = "Add"})" class="btn btn-sm btn-success"><i class="fas fa-folder-plus"></i>&nbsp;&nbsp;เพิ่มใหม่</a>
                        </div>
                    </div>
                    <hr />
                </section>
                <!-- Table -->
                <section class="Frm-Table">
                    <table id="DT_Table" class="table table-md table-hover table-bordered">
                        <thead style="background-color:#F8FAFD;">
                            <tr>
                                <th class="text-center" style="width:20%;"> รหัส </th>
                                <th class="text-center"> ชื่อ </th>
                                <th class="text-center" style="width:5%;"> <i class="fas fa-ellipsis-h"></i> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in ViewBag.DT_Zone)
                            {
                                <tr>
                                    <td>@row.ZoneId</td>
                                    <td>@row.ZoneName</td>
                                    <td class="text-center"><a href="@Url.Action("FrmZone", "CD_Zone", new { mode = "Edit", id = row.ZoneId})" class="text-info"><i class="fas fa-edit"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>        
    </div>
</div>

@section Scripts {
    <script src="~/Plugins/DataTables/datatables.min.js"></script>
    <script src="~/Plugins/DataTables/DataTables-1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>

        $(document).ready(function () {

            $(".item_click_Zone").addClass("active");

            $('#DT_Table').DataTable({
                "info": false,
                "ordering": false
            });

            $('[scroll]').slimScroll({
                height: $(window).height() - 95,
                railBorderRadius: 0,
                railVisible: true
            });
        });

