@model REST.ViewModels.ViewGroupFood;
@{
    ViewData["Title"] = "Store Back";
    ViewData["System"] = "กลุ่มอาหาร";
    Layout = "_StoreBack";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-xl-11 mx-auto">
                <!-- Header -->
                <section class="FrmHeader">
                    <div class="d-flex mb-2">
                        <div class="mr-auto">
                            <a href="@Url.Action("FrmGroupFood", "CD_GroupFood", new { mode = "Add" })" class="btn btn-sm btn-success mr-3"><i class="fas fa-folder-plus"></i>&nbsp;&nbsp;เพิ่ม</a>
                        </div>
                        <div class="ml-2">
                            <a href="#" class="btn btn-sm btn-danger @ViewData["Disible-delete"]" btn-delete><i class="far fa-trash-alt"></i>&nbsp;&nbsp;ลบ</a>
                        </div>
                        <div class="ml-2">
                            <a href="#" class="btn btn-sm btn-blue" @ViewData["Disible-save"] btn-save><i class="far fa-save"></i>&nbsp;&nbsp;บันทึก</a>
                        </div>
                    </div>
                    <hr />
                </section>
                <!-- Form -->
                <section scroll>
                    <form name="FrmGroupFood" method="post">
                        <div class="row">
                            <div class="col-lg-8 col-md-12 col-12 mx-auto">
                                <div class="row">
                                    <div class="col-md-7 border-right border-light">
                                        <h6 class="text-center font-weight-bold">ข้อมูล</h6>
                                        <hr />
                                        <div class="form-group">
                                            <label class="col-form-label col-form-label-sm">รหัส :</label>
                                            @if (ViewData["Readonly"].ToString() != "")
                                            {                                                
                                                <input type="text" class="form-control form-control-sm" asp-for="GroupFoodId" readonly>
                                            }
                                            else
                                            {
                                                <input type="text" class="form-control form-control-sm" asp-for="GroupFoodId">
                                            }
                                            <span asp-validation-for="GroupFoodId" class="text-danger col-form-label-sm"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label col-form-label-sm">ชื่อ :</label>
                                            <input type="text" class="form-control form-control-sm" asp-for="GroupFoodName">
                                            <span asp-validation-for="GroupFoodName" class="text-danger col-form-label-sm"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label col-form-label-sm">รายละเอียด :</label>
                                            <textarea class="form-control form-control-sm" asp-for="Description" rows="3"></textarea>
                                            <span asp-validation-for="Description" class="text-danger col-form-label-sm"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-5">
                                        <h6 class="text-center font-weight-bold">เลข Running</h6>
                                        <hr />
                                        <div class="form-group">
                                            <label class="col-form-label col-form-label-sm">อักษรนำหน้า :</label>
                                            <input asp-for="Front" type="text" class="form-control form-control-sm">
                                        </div>
                                        <div class="form-group">
                                            <label class="col-form-label col-form-label-sm">ตัวเลข :</label>
                                            <input asp-for="Number" type="number" class="form-control form-control-sm">
                                        </div>
                                        <div class="form-group form-check">
                                            <input asp-for="AutoRun" type="checkbox" class="form-check-input mt-2" />
                                            <label asp-for="AutoRun" class="form-check-label col-form-label-sm">Auto Run</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".item_click_GroupFood").addClass("active");

            $('[scroll]').slimScroll({
                height: $(window).height() - $('.FrmHeader').height() - 150,
                railBorderRadius: 0,
                railVisible: true
            });
        });

        document.querySelector("[btn-save]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการบันทึกข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmGroupFood.action = '@Url.Action("FrmGroupFood")'
                    document.FrmGroupFood.submit();
                }
            })
        })

        document.querySelector("[btn-delete]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการลบข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmGroupFood.action = '@Url.Action("Delete")'
                    document.FrmGroupFood.submit();
                }
            })
        })
    </script>
}