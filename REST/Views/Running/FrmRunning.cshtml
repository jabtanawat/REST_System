@model REST.ViewModels.ViewRunning;
@{
    ViewData["Title"] = "ระบบทะเบียน";
    ViewData["System"] = "เลข Running";
    Layout = "_StoreBack";
}

<div class="card rounded-0">
    <div class="card-body">
        <div class="row">
            <div class="col-xl mx-auto">
                <form name="FrmRunning" method="post">
                    <div class="row">
                        <div class="col-md-6 mx-auto">
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">สาขา :</label>
                                <div class="col-sm-7">
                                    <input asp-for="BranchId" type="hidden" />
                                    <input asp-for="BranchName" type="text" readonly class="form-control-plaintext form-control-sm border-bottom rounded-0" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">ชื่อเอกสาร :</label>
                                <div class="col-sm-7">
                                    <input asp-for="NameTh" type="text" readonly class="form-control-plaintext form-control-sm border-bottom rounded-0" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">ตัวคุมเอกสาร :</label>
                                <div class="col-sm-7">
                                    <input asp-for="Name" type="text" readonly class="form-control-plaintext form-control-sm border-bottom rounded-0" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">ตัวอักษรนำหน้า :</label>
                                <div class="col-sm-7">
                                    <input asp-for="Front" type="text" class="form-control-plaintext form-control-sm border-bottom rounded-0" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">ตัวเลข :</label>
                                <div class="col-sm-7">
                                    <input asp-for="Number" type="text" class="form-control-plaintext form-control-sm border-bottom rounded-0" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">Auto Run :</label>
                                <div class="col-sm-7">
                                    <input asp-for="AutoRun" class="form-check-input ml-1 mt-2" type="checkbox">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">รูปแบบฟอร์มวันที่ :</label>
                                <div class="col-sm-7">
                                    <select asp-for="SetDate" class="form-control-plaintext form-control-sm border-bottom rounded-0">
                                        <option value="" selected>-- กรุณาเลือกรูปแบบ --</option>
                                        <option value="yy">yy</option>
                                        <option value="yyMM">yyMM</option>
                                        <option value="yyMMdd">yyMMdd</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">Auto Date :</label>
                                <div class="col-sm-7">
                                    <input asp-for="AutoDate" class="form-check-input ml-1 mt-2" type="checkbox">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>                
                <!-- Footer -->
                <section>
                    <div class="d-flex justify-content-center mt-3">
                        <a href="#" class="btn btn-sm btn-blue mr-3" @ViewData["Disible-save"] btn-save><i class="far fa-save"></i>&nbsp;&nbsp;บันทึก</a>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".item_click_Running").addClass("active");
        })

        document.querySelector("[btn-save]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการบันทึกข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmRunning.action = '@Url.Action("FrmRunning")'
                    document.FrmRunning.submit();
                }
            })
        })
    </script>
}
