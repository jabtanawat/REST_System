@model CD_Title;
@{
    ViewData["Title"] = "Store Back";
    ViewData["System"] = "คำนำหน้า";
    Layout = "_StoreBack";
}

<div class="card">
    <div class="card-body">

        <div class="row">
            <div class="col-xl-11 mx-auto">
                <!-- Header -->
                <section class="FrmHeader">
                    <div class="d-flex mb-2">
                        <div class="mr-auto">
                            <a href="@Url.Action("FrmUnit", "CD_Unit", new { mode = "Add" })" class="btn btn-sm btn-success mr-3"><i class="fas fa-folder-plus"></i>&nbsp;&nbsp;เพิ่ม</a>
                        </div>
                    </div>
                    <hr />
                </section>

                <section class="Frm-Table">
                    <form name="FrmTitle" method="post">
                        <div class="row">
                            <div class="col-lg-5 col-12 mx-auto">
                                <div class="form-group">
                                    <label class="col-form-label col-form-label-sm text-sm-right">รหัส :</label>
                                    @if (ViewData["Readonly"].ToString() != "")
                                    {
                                        <input asp-for="TitleId" type="text" class="form-control form-control-sm" readonly>
                                    }
                                    else
                                    {
                                        <input asp-for="TitleId" type="text" class="form-control form-control-sm">
                                    }
                                    <span asp-validation-for="TitleId" class="text-danger col-form-label-sm"></span>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label col-form-label-sm text-sm-right">ชื่อ :</label>
                                    <input asp-for="TitleName" type="text" class="form-control form-control-sm">
                                    <span asp-validation-for="TitleName" class="text-danger col-form-label-sm"></span>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label col-form-label-sm text-sm-right">รายละเอียด :</label>
                                    <textarea asp-for="Description" rows="3" class="form-control form-control-sm"></textarea>
                                    <span asp-validation-for="Description" class="text-danger col-form-label-sm"></span>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>

                <!-- Footer -->
                <section>
                    <div class="d-flex justify-content-center mt-3">
                        <a href="#" class="btn btn-sm btn-blue mr-3" @ViewData["Disible-save"] btn-save><i class="far fa-save"></i>&nbsp;&nbsp;บันทึก</a>
                        <a href="#" class="btn btn-sm btn-danger @ViewData["Disible-delete"]" btn-delete><i class="far fa-trash-alt"></i>&nbsp;&nbsp;ลบ</a>
                    </div>
                </section>

            </div>
        </div>        

    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            screenScroll()
        });

        document.querySelector("[btn-save]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการบันทึกข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmTitle.action = '@Url.Action("FrmTitle")'
                    document.FrmTitle.submit();
                }
            })
        })

        document.querySelector("[btn-delete]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการลบข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmTitle.action = '@Url.Action("Delete")'
                    document.FrmTitle.submit();
                }
            })
        })

        function screenScroll() {
            var height_P = $(window).height() - $('.Frm-Header').height() - 150
            $('[scroll]').slimScroll({
                height: height_P,
                railBorderRadius: 0,
                railVisible: true
            });
        }
    </script>
}
