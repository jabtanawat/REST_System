@model REST.ViewModels.ViewZone;
@{
    ViewData["Title"] = "Zone Update";
    Layout = "_StoreBack";
}

<div class="row">
    <div class="col-xl-10 col-12 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-8 col-md-12 col-12  mx-auto">
                        <h5 class="text-center font-weight-bold">
                            แก้ไขโซนที่นั่ง
                        </h5>
                        <hr />
                    </div>
                </div>
                <form name="ZoneUpdate" method="post">
                    <div class="row mb-3">
                        <div class="col-lg-8 col-md-12 col-12 mx-auto">
                            <div class="row">
                                <div class="col-md-7">
                                    <h6 class="text-center font-weight-bold">ข้อมูล</h6>
                                    <hr />
                                    <div class="form-group">
                                        <label>รหัส :</label>
                                        <input type="text" class="form-control" asp-for="ZoneId" readonly>
                                        <span asp-validation-for="ZoneId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>ชื่อ :</label>
                                        <input type="text" class="form-control" asp-for="ZoneName">
                                        <span asp-validation-for="ZoneName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>รายละเอียด :</label>
                                        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <h6 class="text-center font-weight-bold">เลข Running</h6>
                                    <hr />
                                    <div class="form-group">
                                        <label>อักษรนำหน้า :</label>
                                        <input asp-for="Front" type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>ตัวเลข :</label>
                                        <input asp-for="Number" type="number" class="form-control">
                                    </div>
                                    <div class="form-group form-check">
                                        <input asp-for="AutoRun" type="checkbox" class="form-check-input" />
                                        <label asp-for="AutoRun" class="form-check-label">Auto Run</label>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-sm-3 col-12 mx-auto">
                            <div class="row">
                                <div class="col">
                                    <button type="button" onclick="Update()" class="btn btn-blue btn-block shadow-sm"><i class="far fa-save"></i>&nbsp;&nbsp;<span>บันทึก</span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>

        $(document).ready(function () {

            $(".item_click_Zone").addClass("active");

        });  

        function Update() {
            Swal.fire({
                text: "ต้องการแก้ไขข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.ZoneUpdate.action = '@Url.Action("Update", "Zone")'
                    document.ZoneUpdate.submit();
                }
            })
        }

    </script>
}