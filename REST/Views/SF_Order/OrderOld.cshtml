<div class="menubar">
    <div class="sidebar-right">
        <section class="order-body" scroll>
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="new-tab" data-toggle="tab" href="#new" role="tab" aria-controls="new" aria-selected="true">รายการใหม่</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="old-tab" data-toggle="tab" href="#old" role="tab" aria-controls="old" aria-selected="false">รายการเดิม</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="new" role="tabpanel" aria-labelledby="new-tab">
                    <table class="table table-striped">
                        <thead>
                            <tr hidden>
                                <th>รหัส</th>
                                <th>ชื่อ</th>
                                <th style="width:5%;">จำนวน</th>
                                <th style="width:5%;">#</th>
                            </tr>
                        </thead>
                        <tbody table-body>
                        </tbody>
                    </table>
                    <img src="~/Images/System/NoOrder.png" style="position:absolute;top:50%;left:50%;transform: translate(-50%, -50%);" img-no-order />
                </div>
                <div class="tab-pane fade" id="old" role="tabpanel" aria-labelledby="old-tab">
                    <table class="table table-striped">
                        <thead>
                            <tr hidden>
                                <th>รหัส</th>
                                <th>ชื่อ</th>
                                <th style="width:5%;">จำนวน</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var row in ViewBag.Order)
                                {
                                    amount += row.Amount;
                                    price += row.Price * row.Amount;
                                    <tr>
                                        <td hidden>@row.FoodId</td>
                                        <td>
                                            <div>@row.FoodName</div>
                                            <div><strong> ราคา: </strong>@Share.Cnumber(Share.FormatDouble(row.Price), 2)</div>
                                        </td>
                                        <td class="text-right pr-4" style="width:20%;"><strong>@Share.FormatInteger(row.Amount)</strong></td>                                        
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>            
        </section>
        <section class="order-footer">
            <div class="card bg-card-order">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">รายการ :</label>
                        <div class="col-sm-8">
                            <input type="text" class="input-order text-right" value="@amount" id="txtcount" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">ราคารวม :</label>
                        <div class="col-sm-8">
