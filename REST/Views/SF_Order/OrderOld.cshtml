        function Order() {
            const table = $('[table-body]')
            const img = $('[img-no-order]')
            const txtcount = $('#txtcount')
            const txtsum = $('#txtsum')
            table.empty()
            $.get("@Url.Action("GetOrder", "SF_Order")",
                function (data, status) {
                    $.each(data, function (index, val) {
                        if (val != "") {
                            let sum = @price;
                            let count = @amount;
                            val.forEach(function (value) {
                                sum += value.price * value.amount;
                                count += value.amount;
                                var p = '<tr>'
                                    + `<td hidden>${value.foodId}</td>`
                                    + '<td>'
                                    + `<div>${value.foodName}</div>`
                                    + `<div><strong>ราคา: </strong>${numeral(value.price).format('0,0.00')}</div>`
                                    + '</td>'
                                    + `<td class="text-right pr-4" style="width:20%;"><strong>${value.amount}</strong></td>`
                                    + `<td style="width:5%;"><button type="button" onclick="Delete('${value.foodId }')" class="btn btn-table-sm btn-danger"><i class="fas fa-trash-alt"></i></button></td>`
                                    + '</tr>';
                                table.append(p)
                            })
                            txtsum.val(numeral(sum).format('0,0.00'))
                            txtcount.val(count)
                            img.hide()
                        } else {
                            img.show()
                        }
                    })
                }
            )
        }

        function Add(id, amount) {
            const table = $('[table-body]')
            const img = $('[img-no-order]')
            const txtcount = $('#txtcount')
            const txtsum = $('#txtsum')
            table.empty()
            $.post("@Url.Action("Add", "SF_Order")", { id: id, amount: amount },
                function (data, status) {
                    $.each(data, function (index, val) {
                        if (val != "") {
                            let sum = @price;
                            let count = @amount;
                            val.forEach(function (value) {
                                sum += value.price * value.amount
                                count += value.amount
                                var p = '<tr>'
                                    + `<td hidden>${value.foodId}</td>`
                                    + '<td>'
                                    + `<div>${value.foodName}</div>`
                                    + `<div><strong>ราคา: </strong>${numeral(value.price).format('0,0.00')}</div>`
                                    + '</td>'
                                    + `<td class="text-right pr-4" style="width:20%;"><strong>${value.amount}</strong></td>`
                                    + `<td style="width:5%;"><button type="button" onclick="Delete('${value.foodId }')" class="btn btn-table-sm btn-danger"><i class="fas fa-trash-alt"></i></button></td>`
                                    + '</tr>';
                                table.append(p)
                            })
                            txtsum.val(numeral(sum).format('0,0.00'))
                            txtcount.val(count)
                            img.hide()
                        } else {
                            img.show()
                        }
                    })
                }
            )
            $('#amountfood').modal('hide')
        }

        function Delete(id) {
            Swal.fire({
                text: "ลบรายการหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    const table = $('[table-body]')
                    const img = $('[img-no-order]')
                    const txtcount = $('#txtcount')
                    const txtsum = $('#txtsum')
                    table.empty()
                    $.post("@Url.Action("Delete", "SF_Order")", { id: id },
                        function (data, status) {
                            $.each(data, function (index, val) {
                                if (val != "") {
                                    let sum = @price;
                                    let count = @amount;
                                    val.forEach(function (value) {
                                        sum += value.price * value.amount;
                                        count += value.amount;
                                        var p = '<tr>'
                                            + `<td hidden>${value.foodId}</td>`
                                            + '<td>'
                                            + `<div>${value.foodName}</div>`
                                            + `<div><strong>ราคา: </strong>${numeral(value.price).format('0,0.00')}</div>`
                                            + '</td>'
                                            + `<td class="text-right pr-4" style="width:20%;"><strong>${value.amount}</strong></td>`
                                            + `<td style="width:5%;"><button type="button" onclick="Delete('${value.foodId }')" class="btn btn-table-sm btn-danger"><i class="fas fa-trash-alt"></i></button></td>`
                                            + '</tr>';
                                        table.append(p)
                                    })
                                    txtsum.val(numeral(sum).format('0,0.00'))
                                    txtcount.val(count)
                                    img.hide()
                                } else {
                                    img.show()
                                    txtcount.val(@amount)
                                    txtsum.val(numeral(@price).format('0,0.00'))
                                }
                            })
                        }
                    )
                }
            });
        }

        document.querySelector('[btn-cancel]').addEventListener('click', () => {
            Swal.fire({
                text: "ยกเลิกรายการหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    const table = $('[table-body]')
                    const img = $('[img-no-order]')
                    const txtcount = $('#txtcount')
                    const txtsum = $('#txtsum')
                    $.post("@Url.Action("Cancel", "SF_Order")",
                        function (data, status) {
                            table.empty()
                            img.show()
                            txtcount.val(@amount)
                            txtsum.val(numeral(@price).format('0,0.00'))
                        }
                    )
                }
            });
        })

        document.querySelector('[btn-save]').addEventListener('click', () => {
            Swal.fire({
                text: "บันทึกออร์เดอร์หรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    //const paramUrl = new URLSearchParams(window.location.search)
                    //const paramid = paramUrl.get('id')
                    window.location.href = '@Url.Action("Save", "SF_Order", new { id = Table.TableId })'
                }
            });
        })

        function amountfood(val) {
            // Modal
            var PlaceHolderElement = $('#PlaceHolderHere')
            $.get(val).done(function (data) {
                PlaceHolderElement.html(data)
                PlaceHolderElement.find('.modal').modal('show')
            })
        }

        function screenScroll() {
            var height_P = $(window).height() - $('.navbar').height() - $('.content-table-heard').height() - 52
            $('[scroll-card]').slimScroll({
                height: height_P,
                railBorderRadius: 0,
                railVisible: true
            });
        }

        function Scroll() {
            var height_P = $(window).height() - $('.navbar').height() - $('.order-footer').height() - 55
            $('[scroll]').slimScroll({
                height: height_P,
                railBorderRadius: 0,
                railVisible: true
            });
        }
    </script>
}