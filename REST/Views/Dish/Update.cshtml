@model CD_Dish
@{
    ViewData["Title"] = "Dish Update";
    Layout = "_StoreBack";
}

<div class="row">
    <div class="col-xl-10 col-12 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-5 col-md-12 col-12  mx-auto">
                        <h5 class="text-center font-weight-bold">
                            แก้ไขเครื่องเคียง
                        </h5>
                        <hr />
                    </div>
                </div>
                <form name="Insert" method="post">
                    <div class="row mb-3">
                        <div class="col-lg-5 col-md-12 col-12 mx-auto">
                            <div class="form-group">
                                <label>รหัส :</label>
                                <input type="text" class="form-control" asp-for="DishId" readonly>
                                <span asp-validation-for="DishId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>ชื่อ :</label>
                                <input type="text" class="form-control" asp-for="DishName">
                                <span asp-validation-for="DishName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>รายละเอียด :</label>
                                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-sm-3 col-12 mx-auto">
                            <button type="button" onclick="SaveData()" class="btn btn-blue btn-block shadow-sm"><i class="far fa-save"></i>&nbsp;&nbsp;<span>บันทึก</span></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        $(document).ready(function () {

            $(".item_click_Dish").addClass("active");

        });

        function SaveData() {
            Swal.fire({
                text: "ต้องการบันทึกข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.Insert.action = '@Url.Action("Update", "Dish")'
                    document.Insert.submit();
                }
            })
        }

    </script>
}
