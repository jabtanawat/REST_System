@model CD_UserRoleGroup;
@{
    ViewData["Title"] = "ระบบทะเบียน";
    ViewData["System"] = "กลุ่มผู้ใช้งาน";
    Layout = "_StoreBack";
}

<div class="card rounded-0">
    <div class="card-body">
        <!-- Header -->
        <section>
            <div class="d-flex mb-2">
                <div class="mr-2">
                    <a href="@Url.Action("FrmUserRoleGroup", "CD_UserRoleGroup", new { mode = "Add"})" class="text-success col-form-label-sm"><i class="fas fa-folder-plus"></i>&nbsp;เพิ่มกลุ่มผู้ใช้งาน</a>
                </div>
            </div>
            <hr />
        </section>
        <!-- Form -->
        <section>
            <form name="FrmUserRoleGroup" method="post">
                <div class="row">
                    <div class="col-xl-7 col-lg-10 mx-auto">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">รหัสกลุ่มผู้ใช้งาน :</label>
                            <div class="col-sm-7">
                                @if (ViewData["Readonly"].ToString() != "")
                                {
                                    <input asp-for="RoleGroupId" type="text" class="form-control-plaintext form-control-sm border-bottom rounded-0" readonly />
                                }
                                else
                                {
                                    <input asp-for="RoleGroupId" type="text" class="form-control-plaintext form-control-sm border-bottom rounded-0" />
                                }
                                <span asp-validation-for="RoleGroupId" class="text-danger col-form-label-sm"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">ชื่อกลุ่มผู้ใช้งาน :</label>
                            <div class="col-sm-5">
                                <input asp-for="RoleGroupName" type="text" class="form-control-plaintext form-control-sm border-bottom rounded-0" />
                                <span asp-validation-for="RoleGroupName" class="text-danger col-form-label-sm"></span>
                            </div>
                            <div class="col-sm-auto">
                                <div class="form-check">
                                    <input asp-for="Active" class="form-check-input form-control-sm" type="checkbox" id="autoSizingCheck">
                                    <label class="form-check-input col-form-label-sm ml-1" for="autoSizingCheck">
                                        Active
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-sm-1 mb-3">
                            <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right mt-sm-0 mt-4">กำหนดสิทธิ์ :</label>
                            <div class="col-sm-7">
                                <div class="form-check">
                                    <input asp-for="SystemConfig" class="form-check-input form-control-sm" type="checkbox" id="CH1">
                                    <label class="form-check-input col-form-label-sm ml-1" for="CH1">
                                        คุณสมบัติ
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-sm-4">
                            <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right"></label>
                            <div class="col-sm-7">
                                <div class="form-check">
                                    <input asp-for="SaveData" class="form-check-input form-control-sm" type="checkbox" id="CH2">
                                    <label class="form-check-input col-form-label-sm ml-1" for="CH2">
                                        บันทึกข้อมูล
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-sm-4">
                            <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right"></label>
                            <div class="col-sm-7">
                                <div class="form-check">
                                    <input asp-for="ApproveData" class="form-check-input form-control-sm" type="checkbox" id="CH3">
                                    <label class="form-check-input col-form-label-sm ml-1" for="CH3">
                                        อนุมัติข้อมูล
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-sm-4">
                            <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right"></label>
                            <div class="col-sm-7">
                                <div class="form-check">
                                    <input asp-for="ViewData" class="form-check-input form-control-sm" type="checkbox" id="CH4">
                                    <label class="form-check-input col-form-label-sm ml-1" for="CH4">
                                        เรียกดูข้อมูล
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-sm-5">
                            <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right"></label>
                            <div class="col-sm-7">
                                <div class="form-check">
                                    <input asp-for="PrintReport" class="form-check-input form-control-sm" type="checkbox" id="CH5">
                                    <label class="form-check-input col-form-label-sm ml-1" for="CH5">
                                        พิมพ์รายงาน
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label col-form-label-sm text-sm-right">รายละเอียด :</label>
                            <div class="col-sm-7">
                                <textarea class="form-control-plaintext form-control-sm border-bottom rounded-0" asp-for="Description" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger col-form-label-sm"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </form>            
        </section>
        <!-- Footer -->
        <section>
            <hr />
            <div class="d-flex justify-content-center mt-3">
                <a href="#" class="btn btn-sm btn-blue mr-3" @ViewData["Hidden-Save"] btn-save><i class="far fa-save mr-2"></i>บันทึก</a>
                <a href="#" class="btn btn-sm btn-success mr-3 @ViewData["Disible-Edit"]" btn-edit><i class="far fa-edit mr-2"></i>แก้ไข</a>
                <a href="#" class="btn btn-sm btn-danger @ViewData["Disible-delete"]" btn-delete><i class="far fa-trash-alt mr-4"></i>ลบ</a>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".item_click_UserRoleGroup").addClass("active");
        });

        document.querySelector("[btn-save]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการบันทึกข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {

                    document.FrmUserRoleGroup.action = '@Url.Action("FrmUserRoleGroup")'
                    document.FrmUserRoleGroup.submit();
                }
            })
        })

         document.querySelector("[btn-edit]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการแก้ไขข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {

                    document.FrmUserRoleGroup.action = '@Url.Action("FrmUserRoleGroup")'
                    document.FrmUserRoleGroup.submit();
                }
            })
        })

        document.querySelector("[btn-delete]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการลบข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmUserRoleGroup.action = '@Url.Action("Delete")'
                    document.FrmUserRoleGroup.submit();
                }
            })
        })
    </script>
}