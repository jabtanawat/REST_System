@model REST.ViewModels.ViewFood;
@{
    ViewData["Title"] = "Store Back";
    ViewData["System"] = "อาหาร";
    Layout = "_StoreBack";
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-xl-11 mx-auto">
                <!-- Header -->
                <section class="FrmHeader">
                    <div class="d-flex mb-2">
                        <div class="mr-auto">
                            <a href="@Url.Action("FrmFood", "CD_Food", new { mode = "Add" })" class="btn btn-sm btn-success mr-3"><i class="fas fa-folder-plus"></i>&nbsp;&nbsp;เพิ่ม</a>
                        </div>
                        <div class="ml-2">
                            <a href="#" class="btn btn-sm btn-danger @ViewData["Disible-delete"]" btn-delete><i class="far fa-trash-alt"></i>&nbsp;&nbsp;ลบ</a>
                        </div>
                        <div class="ml-2">
                            <a href="#" class="btn btn-sm btn-blue" @ViewData["Disible-save"] btn-save><i class="far fa-save"></i>&nbsp;&nbsp;บันทึก</a>
                        </div>
                    </div>
                    <hr />
                </section>
                <!-- Form -->
                <section class="FrmPanel" scroll>
                    <form name="FrmFood" method="post">
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".item_click_Food").addClass("active");

            $('[scroll]').slimScroll({
                height: $(window).height() - $('.FrmHeader').height() - 150,
                railBorderRadius: 0,
                railVisible: true
            });
        });

        document.querySelector("[btn-save]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการบันทึกข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmFood.action = '@Url.Action("FrmFood")'
                    document.FrmFood.submit();
                }
            })
        })

        document.querySelector("[btn-delete]").addEventListener('click', () => {
             Swal.fire({
                text: "ต้องการลบข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.FrmFood.action = '@Url.Action("Delete")'
                    document.FrmFood.submit();
                }
            })
        })
    </script>
}