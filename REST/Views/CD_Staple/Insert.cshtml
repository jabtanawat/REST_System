@model CD_Staple
@{
    ViewData["Title"] = "Staple Insert";
    Layout = "_StoreBack";
}

<div class="row">
    <div class="col-xl-10 col-12 mx-auto">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-5 col-md-12 col-12  mx-auto">
                        <h5 class="text-center font-weight-bold">
                            เพิ่มวัตถุดิบ
                        </h5>
                        <hr />
                    </div>
                </div>
                <form name="Insert" method="post">
                    <div class="row mb-3">
                        <div class="col-lg-5 col-md-12 col-12 mx-auto">
                            <div class="form-group">
                                <label>รหัส :</label>
                                <input type="text" class="form-control" asp-for="StapleId">
                                <span asp-validation-for="StapleId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>ชื่อ :</label>
                                <input type="text" class="form-control" asp-for="StapleName">
                                <span asp-validation-for="StapleName" class="text-danger"></span>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-7 mb-3">
                                    <label>จำนวน :</label>
                                    <input asp-for="QtyBalance" type="number" class="form-control floatNumber text-right" placeholder="0.00" value="0.00">
                                    <span asp-validation-for="QtyBalance" class="text-danger"></span>
                                </div>
                                <div class="col-md-5">
                                    <label>หน่วยนับ :</label>
                                    <select asp-for="Unit" class="custom-select">
                                        <option value="" selected>-- กรุณาเลือก --</option>
                                        @foreach (var row in ViewBag.SL_Unit)
                                        {
                                            <option value="@row.UnitId">@row.UnitName</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Unit" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 col-sm-3 col-12 mx-auto">
                            <button type="button" onclick="SaveData()" class="btn btn-blue btn-block shadow-sm"><i class="far fa-save"></i>&nbsp;&nbsp;<span>บันทึก</span></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>

        $(document).ready(function () {

            $(".item_click_Staple").addClass("active");

        });

        function SaveData() {
            Swal.fire({
                text: "ต้องการบันทึกข้อมูลหรือไม่ ?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.value) {
                    document.Insert.action = '@Url.Action("Insert", "Staple")'
                    document.Insert.submit();
                }
            })
        }

        $(".floatNumber").change(function () {
            $(this).val(parseFloat($(this).val()).toFixed(2));
        });

    </script>
}
