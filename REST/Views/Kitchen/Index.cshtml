@{
    ViewData["Title"] = "Kitchen";
    Layout = "_LayoutKitchen";
    var DateNow = DateTime.Now.ToString("dd/MM/yyyy");
    var Date = DateTime.Now.ToString("yyyy-MM-dd");
}

@section Styles {
    <link href="~/Plugins/Jquery-ui-1.12.1/jquery-ui.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Plugins/SlimScroll-1.3.8/libs/prettify/prettify.css" />
}


<div class="row">
    <div class="col-md mb-3">
        <div class="card border-0">
            <div class="card-body">
                <div class="Order__Hearder">
                    <div class="row">
                        <div class="col-sm col-12 mb-2">
                            <h6 class="text-secondary font-weight-bold">รายการอาหารประจำวัน</h6>
                        </div>
                        <div class="col mb-2">
                            <div class="d-flex justify-content-end">
                                <input type="text" class="form-control form-control-sm col-md-6 col-6" value="@DateNow" onchange="Table(this.value);" id="datepicker" />
                            </div>
                        </div>
                    </div>
                    <hr class="mt-0" />
                </div>
                <div class="Scroll__Order">
                    <table id="DT_Order" class="table table-hover table-bordered">
                        <thead class="thead-light">
                            <tr>
                                <th class="text-center">รหัสออเดอร์</th>
                                <th class="text-center">รหัสโต๊ะ</th>
                                <th class="text-center">ราคา</th>
                                <th class="text-center">สถานะ</th>
                                <th class="text-center">#</th>
                            </tr>
                        </thead>
                        <tbody id="TB_body">

                        </tbody>
                    </table>
                </div>                
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card border-0">
            <div class="card-body">
                <h6 class="text-secondary font-weight-bold text-right">จำนวนรายการอาหาร&nbsp;&nbsp;&nbsp;@DateNow</h6>
                <hr class="mb-0" />
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center text-secondary font-weight-bold">
                        ทั้งหมด
                        <span class="badge badge-primary badge-pill">@ViewBag.ST_A</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center text-secondary font-weight-bold">
                        ทำเสร็จแล้ว
                        <span class="badge badge-success badge-pill">@ViewBag.ST_1</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center text-secondary font-weight-bold">
                        ยังไม่ได้ทำ
                        <span class="badge badge-danger badge-pill">@ViewBag.ST_0</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Plugins/Jquery-ui-1.12.1/jquery-ui.js"></script>
    <script src="~/Plugins/Numeral/numeral.js"></script>
    <script src="~/Plugins/SlimScroll-1.3.8/libs/prettify/prettify.js"></script>
    <script src="~/Plugins/SlimScroll-1.3.8/jquery.slimscroll.min.js"></script>
    <script>
        $(document).ready(function () {

            $('#datepicker').datepicker({
                dateFormat: "dd/mm/yy",
            });

            Table('@Date');

            Scroll_Order();
        });

        // Get

        function Table(Date) {
            $('#TB_body').empty();
            $.ajax({
                type: 'POST',
                url: '@Url.Action("TB_Order", "Kitchen")',
                dataType: 'json',
                data: { DATE_Order: Date },
                success: function (data) {
                    $.each(data, function (index, val) {
                        if (val.length > 0) {
                            val.forEach(function (value) {

                                // Status Order
                                if (value.st == 0) {
                                    var st = '<td class="text-center text-danger table-danger" data-toggle="tooltip" data-placement="top" title="ยังไม่เสร็จ" style="width:4rem;"><i class="fas fa-times"></i></td>'
                                } else if (value.st == 1) {
                                    var st = '<td class="text-center text-success table-success" data-toggle="tooltip" data-placement="top" title="เสร็จแล้ว" style="width:4rem;"><i class="fas fa-check"></i></td>'
                                }

                                var t = '<tr>'
                                    + '<td>' + value.orderId + '</td>'
                                    + '<td>' + value.tableId + '</td>'
                                    + '<td class="text-right">' + numeral(value.priceTotal).format('0,0.00')+ '</td>'
                                    + st
                                    + '<td class="text-center" style="width:2rem;"><a href="@Url.Action("ViewOrder","Kitchen")/' + value.orderId + '" class="text-info"><i class="far fa-eye"></i></a></td>'
                                    + '</tr>';
                                $('#TB_body').append(t)
                            })
                        } else {
                            var t = '<tr>'
                                + '<td colspan="5" class="text-center">ไม่มีข้อมูล</td>'
                                + '</tr>';
                            $('#TB_body').append(t)
                        }
                    })
                }
            })
        }

        // Resize

        function Scroll_Order() {

            var height_Payment = $(document).height() - $('.Order__Hearder').height() - $('.navbar').height() - 110

            $('.Scroll__Order').slimScroll({
                height: height_Payment
            });

        }

    </script>
}